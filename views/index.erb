
    <legend>All students:</legend> <br />
    
    <table border = "1">
  <thead>
    <tr>
      <th>Andrew ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Major</th>
      <th>E-mail</th>
      <th>Status</th>
      <th colspan="2" >Options</th>
    </tr>
  </thead>
  <tbody>
   <% @student.each do |id, firstName, lastName, major, email, studentStatus| %>
    <tr><td scope="row"><a href="/student/<%= id %>"><%= id %></a> </td>
      <td><%= firstName %></td>
      <td><%= lastName %></td>
      <td><%= major %></td>
      <td><%= email %></td>
      <td><%= studentStatus %></td>
      <td><a href="/student/<%= id %>/edit" class="btn btn-info">Edit</a> </td>
      <td><a href ="/student/<%= id %>/delete" class='btn btn-danger'>Delete</a></td></tr>
    <% end %>  </tbody>
</table>


