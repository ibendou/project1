
    <legend>All students:</legend> <br />
    
    <table class="table table-sm">
  <thead>
    <tr>
      <th scope="col">Andrew ID</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Major</th>
      <th scope="col">E-mail</th>
      <th scope="col">Status</th>
      <th align="center" colspan="2" >Options</th>
    </tr>
  </thead>
  <tbody>
   <% @student.each do |id, firstName, lastName, major, email, studentStatus| %>
    <tr><td scope="row"><a href="/student/<%= id %>"><%= id %></a> </td>
      <td><%= firstName %></td>
      <td><%= lastName %></td>
      <td><%= major %></td>
      <td><%= email %></td>
      <td><%= studentStatus %></td>
      <td><a href="/student/<%= id %>/edit" class="btn btn-info">Edit</a> </td>
      <td><a href ="/student/<%= id %>/delete" Onclick="return ConfirmDelete();" class='btn btn-danger'>Delete</a></td></tr>
    <% end %>  </tbody>
</table>


