<form class="form-horizontal" id='thisform' action='https://dong-67272-ibendou.c9users.io/student' method='post'>
<fieldset>

<!-- Form Name -->
<legend class = "text-white">Create a new Student Record</legend>


<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label text-white" for="id">Andrew ID:</label>  
  <div class="col-md-4">
  <input id="id" name="id" type="text" placeholder="" class="form-control input-md" required>
    
  </div>
   <label class="col-md-4 control-label text-white" for="firstName">First Name:</label>  
  <div class="col-md-4">
  <input id="firstName" name="firstName" type="text" placeholder="" class="form-control input-md" required>
  </div>
  
   <label class="col-md-4 control-label text-white" for="lastName">Last Name:</label>  
  <div class="col-md-4">
  <input id="lastName" name="lastName" type="text" placeholder="" class="form-control input-md" required>
  </div>
  
   <label class="col-md-4 control-label text-white" for="major">Major:</label>  
     <div class="col-md-4">
<select class='form-control' id='major' name='major'>
  <option value='Biological Sciences'>Biological Sciences</option>
  <option value='Business Administration'>Business Administration</option>
  <option value='Computer Science'>Computer Science</option>
  <option value='Information Systems'>Information Systems</option>
</select>
</div>
  
   <label class="col-md-4 control-label text-white" for="email">Email:</label>  
  <div class="col-md-4">
  <input id="email" name="email" type="text" placeholder="" class="form-control input-md" required>
  </div>
  
     <label class="col-md-4 control-label text-white" for="studentStatus">Status (Graduated/Enrolled):</label>  
     <div class="col-md-4">
<select class='form-control' id='studentStatus' name='studentStatus'>
  <option value='Graduated'>Graduated</option>
  <option value='Enrolled'>Enrolled</option>
</select>
</div>
  

  
  
</div>

<!-- Button -->
<div class="form-group">
  <label class="col-md-4 control-label" for="submit"></label>
  <div class="col-md-4">
    <button id="submit" name="submit" class="btn btn-info">Submit</button>
  </div>
</div>

</fieldset>
</form>
