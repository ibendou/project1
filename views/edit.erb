<form class="form-horizontal" action='https://dong-67272-ibendou.c9users.io/student/<%= @student[0][0] %>' method='post'>
  <input type='hidden' name='_method' value='patch'>
<fieldset>

<!-- Form Name -->
<legend>Edit Student Record</legend>


<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="id">Andrew ID:</label>  
  <div class="col-md-4">
  <input id="id" name="id" type="text" value="<%= @student[0][0] %>" class="form-control input-md" required>
    
  </div>
   <label class="col-md-4 control-label" for="firstName">First Name:</label>  
  <div class="col-md-4">
  <input id="firstName" name="firstName" type="text" value="<%= @student[0][1] %>" class="form-control input-md" required>
  </div>
  
   <label class="col-md-4 control-label" for="lastName">Last Name:</label>  
  <div class="col-md-4">
  <input id="lastName" name="lastName" type="text" value="<%= @student[0][2] %>" class="form-control input-md" required>
  </div>
  
   <label class="col-md-4 control-label" for="major">Major:</label>  
  <div class="col-md-4">
  <input id="major" name="major" type="text" value="<%= @student[0][3] %>" class="form-control input-md" required>
  </div>
  
   <label class="col-md-4 control-label" for="email">Email:</label>  
  <div class="col-md-4">
  <input id="email" name="email" type="text" value="<%= @student[0][4] %>" class="form-control input-md" required>
  </div>
  
   <label class="col-md-4 control-label" for="studentStatus">Status (Enrolled/Graduated):</label>  
  <div class="col-md-4">
  <input id="studentStatus" name="studentStatus" type="text" value="<%= @student[0][5] %>" class="form-control input-md" required>
  </div>
  
</div>




<!-- Button -->
<div class="form-group">
  <label class="col-md-4 control-label" for="submit"></label>
  <div class="col-md-4">
    <button id="submit" name="submit" class="btn btn-primary">Submit</button>
  </div>
</div>

</fieldset>
</form>
