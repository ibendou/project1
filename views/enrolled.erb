
        <legend>List of Enrolled Students:</legend> <a class="btn btn-light" href="/student"  role="button"><< Go back to Main Page</a>
        
        <br />
    
    <table class="table table-sm">
  <thead>
    <tr>
      <th scope="col">Andrew ID</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Major</th>
      <th scope="col">E-mail</th>
      <th align="center" colspan="2" >Options</th>
    </tr>
  </thead>
  <tbody>
   <% @enrolled_students.each do |id, firstName, lastName, major, email| %>
    <tr><td scope="row"><a href="/student/<%= id %>"><%= id %></a> </td>
      <td><%= firstName %></td>
      <td><%= lastName %></td>
      <td><%= major %></td>
      <td><%= email %></td>
      <td><a href="/student/<%= id %>/edit" class="btn btn-info">Edit</a> </td>
      <td><a href ="/student/<%= id %>/delete" class='btn btn-danger'>Delete</a></td></tr>
    <% end %>  </tbody>
</table>

